@model ALWADI.Models.Department

@{
    ViewData["Title"] = "Delete";
}



<h3 style="margin-top:10px;">هل أنت متأكد من حذف المعلومات التالية؟</h3>

<div class="row">
    <div class="col-12">

        <div class="card card-danger border-0">
            <div class="card-header">
                <h3 class="card-title">حذف قسم</h3>


                <div class="d-inline">
                    <a asp-action="AllDepartment"><i class="fa fa-arrow-left fa-lg"></i> </a>
                </div>

            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="DepartmentId" />
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-5">
                            <div class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="DepartmentName" class="control-label"> @Html.DisplayNameFor(model => model.DepartmentName)</label>
                                <input asp-for="DepartmentName" class="form-control" readonly />
                                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="DepartmentDescription" class="control-label">@Html.DisplayNameFor(model => model.DepartmentDescription)</label>
                                <input asp-for="DepartmentDescription" class="form-control" readonly />
                                <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group justify-content-center ">
                                <label asp-for="arrangement" class="control-label"> @Html.DisplayNameFor(model => model.arrangement)</label>
                                <input asp-for="arrangement" class="form-control" min="0"  readonly/>
                                <span asp-validation-for="arrangement" class="text-danger"></span>
                            </div>
                            <div class="form-group ">
                                <label asp-for="DepartmentImg" class="control-label"> @Html.DisplayNameFor(model => model.DepartmentImg)</label><br />
                                @*<input asp-for="DoctorImg" class="form-control" />*@

                                <img src="@ViewBag.ImageDataUrl" width="300" height="300" style="border-radius: 8px;" />

                                <span asp-validation-for="DepartmentImg" class="text-danger"></span>
                            </div>
                            




                        </div>
                       


                    </div>
                </div>
                <div class="card-footer">
                   
                    <input type="submit" value="حذف" class="btn btn-danger" />
                </div>
            </form>

        </div>
    </div>
</div>



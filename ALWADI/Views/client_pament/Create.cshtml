@model ALWADI.Models.client_pament

@{
    ViewData["Title"] = "Create";
}



<div class="row" style="margin-top:10px">
    <div class="col-12">

        <div class="card card-primary border-0">
            <div class="card-header">
                <h3 class="card-title">إنشاء معلن جديد</h3>


                <div class="d-inline">
                    <a asp-action="Index"><i class="fa fa-arrow-left fa-lg"></i> </a>
                </div>

            </div>

            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-5">
                            <div class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Payment_Num" class="control-label"></label>
                                <input asp-for="Payment_Num" class="form-control" />
                                <span asp-validation-for="Payment_Num" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Payment_value" class="control-label"></label>
                                <input asp-for="Payment_value" class="form-control" />
                                <span asp-validation-for="Payment_value" class="text-danger"></span>
                            </div>
                            


                        </div>
                        <div class="col-5">

                            <div class="form-group">
                                <label asp-for="payment_details" class="control-label"></label>
                                <input asp-for="payment_details" class="form-control" />
                                <span asp-validation-for="payment_details" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Client_Id" class="control-label"></label>
                                <select asp-for="Client_Id" class="form-control" asp-items="ViewBag.Client_Id"></select>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-plus"></i>
                        إنشاء
                    </button>


                </div>

            </form>
        </div>
    </div>
</div>











@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

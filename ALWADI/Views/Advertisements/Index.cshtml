@model IEnumerable<ALWADI.Models.Advertisement>

@{
    ViewData["Title"] = "Index";
}

<div class="row" style="margin-top:10px;">
    <div class="col-12">


        <div class="card">

            <div class="card-header">
                <h3 class="card-title">
                    الإعلانات


                </h3>
                <a class="float-left" asp-action="Create">
                    <i class="fa fa-plus"></i>
                    إنشاء إعلان جديد 

                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="dep_table">

                        <thead style="white-space: nowrap;">
                            <tr>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.id)
                                </th>

                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.Ads_StartDate)
                                </th>

                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.Ads_place)
                                </th>


                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.Ads_profit)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.clientNavigation)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.categoryNavigation)
                                </th>
                                <th style="text-align: center;">
                                    @Html.DisplayNameFor(model => model.Ads_EndDate)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>

                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.Ads_StartDate)
                                </td>

                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.Ads_place)
                                </td>


                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.Ads_profit)
                                </td>
                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.clientNavigation.clientname)
                                </td>
                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.categoryNavigation.category_name)
                                </td>
                                <td style="text-align: center; ">
                                    @Html.DisplayFor(modelItem => item.Ads_EndDate)
                                </td>
                                <td style="text-align: center; white-space: nowrap;">

                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.id">تعديل</a> |
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id" style="background-color:green;">تفاصيل</a> |
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">حذف</a>


                                </td>
                            </tr>
                            }
                        </tbody>



                    </table>

                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>




    <script>


        $(document).ready(function () {
            $('#dep_table').DataTable({
                "lengthMenu": [[5, 10, 15, 20, 25, -1], [5, 10, 15, 20, 25, "All"]],
                "responsive": true,
                "autoWidth": true,
                "language": {
                    "sProcessing": "جارٍ التحميل...",
                    "sLengthMenu": "أظهر _MENU_ مدخلات",
                    "sZeroRecords": "لم يتم العثور على أية نتائج",
                    "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                    "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                    "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                    "sInfoPostFix": "",
                    "sSearch": "البحث:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sPrevious": "السابق",
                        "sNext": "التالي",
                        "sLast": "الأخير"
                    }
                }
            });
        });
    </script>
}
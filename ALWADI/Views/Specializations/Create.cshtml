@model ALWADI.Models.Specialization

@{
    ViewData["Title"] = "Create";
}

<div class="row" style="margin-top:10px">
    <div class="col-12">

        <div class="card card-primary border-0">
            <div class="card-header">
                <h3 class="card-title">إنشاء تخصص</h3>


                <div class="d-inline">
                    <a asp-action="Index"><i class="fa fa-arrow-left fa-lg"></i> </a>
                </div>

            </div>

            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-5">
                            <div class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="SpecializationName" class="control-label">@Html.DisplayNameFor(model => model.SpecializationName)</label>
                                <input class="form-control" asp-for="SpecializationName" type="text" />
                                <span asp-validation-for="SpecializationName" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="SpecializationDescription" class="control-label">@Html.DisplayNameFor(model => model.SpecializationDescription)</label>
                                <input class="form-control" asp-for="SpecializationDescription" type="text" />
                                <span asp-validation-for="SpecializationDescription" class="text-danger"></span>
                            </div>
                            



                        </div>
                        <div class="col-5">





                            <div class="form-group ">
                                <label asp-for="Specializationmg" class="control-label"> @Html.DisplayNameFor(model => model.Specializationmg)</label>
                                <input asp-for="Specializationmg" class="form-control" type="file" name="file1" id="file1" multiple="multiple" />


                                <span asp-validation-for="Specializationmg" class="text-danger"></span>
                            </div>
                          

                            @*<div class="form-group">
                                <label asp-for="SessionDuration" class="control-label">@Html.DisplayNameFor(model => model.SessionDuration)</label>
                                <input class="form-control" asp-for="SessionDuration" type="number" />
                                <span asp-validation-for="SessionDuration" class="text-danger"></span>
                            </div>*@
                            

                           



                        </div>

                        <div class="col-6">
                            <div class="form-group justify-content-center ">
                                <label asp-for="DepNum" class="control-label"> @Html.DisplayNameFor(model => model.DepNum)</label>
                                <select asp-for="DepNum" class="form-control" asp-items="ViewBag.DepNum" ></select>
                                <span asp-validation-for="DepNum" class="text-danger"></span>
                            </div>
                        </div>
                        

                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-plus"></i>
                        إنشاء
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

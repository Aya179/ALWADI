@model IEnumerable<ALWADI.Models.AppointmentGet>

    <div class="row" style="margin-top:10px;">
        <div class="col-12">


            <div class="card">

                <div class="card-header">
                    <h3 class="card-title">
                       الدفعات


                    </h3>
                   
                </div>

                <div class="card-body">
                    <div class="table-responsive">



                        <table class="table table-striped" id="dep_table">
                            <thead>
                                <tr>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.payId)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.DoctorName)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.PatientName)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.centerCost)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.webCost)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.doctorCost)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.ispaid)
                                    </th>
                                    <th style="text-align: center;">
                                        @Html.DisplayNameFor(model => model.PaymentDate)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.payId)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.DoctorName)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.PatientName)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.centerCost)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.webCost)
                                    </td>
                                    <td style="text-align: center;">
                                        @Html.DisplayFor(modelItem => item.doctorCost)
                                    </td>

                                    <td style="text-align: center;">
                                        @if (item.ispaid == true)
                                        {<p>تم الدفع</p>}
                                       else
                                           {
                                            <p>غير مدفوعة</p>

                                                }

                                    </td>
                                    <td style="text-align: center;">
                                        @{
                                            var date = item.PaymentDate.Date.ToShortDateString();
                                        }
                                        @Html.DisplayFor(modelItem => date)
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                        @section Scripts {
                            <script>
                                $(function () {
                                    $('#dep_table').DataTable({
                                        "lengthMenu": [[5, 10, 15, 20, 25, -1], [5, 10, 15, 20, 25, "All"]],
                                        "responsive": true,
                                        "autoWidth": true,
                                        "language": {
                                            "sProcessing": "جارٍ التحميل...",
                                            "sLengthMenu": "أظهر _MENU_ مدخلات",
                                            "sZeroRecords": "لم يتم العثور على أية نتائج",
                                            "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                                            "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                                            "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                                            "sInfoPostFix": "",
                                            "sSearch": "البحث:",
                                            "sUrl": "",
                                            "oPaginate": {
                                                "sFirst": "الأول",
                                                "sPrevious": "السابق",
                                                "sNext": "التالي",
                                                "sLast": "الأخير"
                                            }
                                        }
                                    });
                                });</script>
                        }

@model IEnumerable<ALWADI.Models.Patient>

@{
    ViewData["Title"] = "Index";
}




<div class="row" style="margin-top:10px;">
    <div class="col-12">


        <div class="card">

            <div class="card-header">
                <h3 class="card-title">
                    المرضى


                </h3>
                <a class="float-left" asp-action="Create">
                    <i class="fa fa-plus"></i>
                    إنشاء مريض جديد

                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="dep_table">
                        <thead style="white-space: nowrap;">
                            <tr>
                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientName)
                                </th>

                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientPhone)
                                </th>
                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientAddress)
                                </th>

                                @*<th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientImg)
                                </th>*@
                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientLocation)
                                </th>

                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientPassword)
                                </th>

                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientGender)
                                </th>


                                <th style="text-align: right;">
                                    @Html.DisplayNameFor(model => model.PatientAge)
                                </th>

                                <th style="text-align: right;  width:70%;">
                                    @Html.DisplayNameFor(model => model.ActivationCode)
                                </th>

                                <th style="text-align: right;  width:70%;">
                                    @Html.DisplayNameFor(model => model.ActivationDate)
                                </th>

                                <th style="text-align: right; width: 70%"></th>
                            </tr>
                        </thead>
                        <tbody >
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientName)
                                </td>
                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientPhone)
                                </td>
                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientAddress)
                                </td>

                                @*<td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientImg)
                                </td>*@

                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientLocation)
                                </td>

                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientPassword)
                                </td>

                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientGender)
                                </td>

                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.PatientAge)
                                </td>

                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.ActivationCode)
                                </td>

                                <td style="text-align: center;">
                                    @Html.DisplayFor(modelItem => item.ActivationDate)
                                </td>

                                <td style="text-align: center; white-space: nowrap;">

                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.PatientId">تعديل</a> |
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.PatientId" style="background-color:green;">تفاصيل</a> |
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PatientId">حذف</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>




    <script>


        $(document).ready(function () {
            $('#dep_table').DataTable({
                "lengthMenu": [[5, 10, 15, 20, 25, -1], [5, 10, 15, 20, 25, "All"]],
                "responsive": true,
                "autoWidth": true,
                "language": {
                    "sProcessing": "جارٍ التحميل...",
                    "sLengthMenu": "أظهر _MENU_ مدخلات",
                    "sZeroRecords": "لم يتم العثور على أية نتائج",
                    "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                    "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                    "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                    "sInfoPostFix": "",
                    "sSearch": "البحث:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sPrevious": "السابق",
                        "sNext": "التالي",
                        "sLast": "الأخير"
                    }
                }
            });
        });
    </script>
}
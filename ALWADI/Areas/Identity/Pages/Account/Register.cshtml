<div class="row" style="margin-top:10px">
    <div class="col-12">

        <div class="card card-primary border-0">
            <div class="card-header">
                <h3 class="card-title">إنشاء موظف</h3>


                <div class="d-inline">
                    <a asp-controller="Account" asp-action="allUsers"><i class="fa fa-arrow-left fa-lg"></i> </a>
                </div>

            </div>

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-5">
                            <div class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for=" Input.Email" class="control-label">الايميل</label>
                                <input class="form-control" asp-for="Input.Email" type="text" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="Input.Password" class="control-label">كلمة السر</label>
                                <input class="form-control" asp-for="Input.Password" type="password" placeholder="Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group ">
                                <label asp-for="Input.ConfirmPassword" class="control-label"> تأكيد كلمة السر</label>


                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Password">
                                </input>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                              <div class="form-group ">
                                <label class="control-label"> السماحيات</label>

                                <select asp-for="Input.roles" id="role" class="form-control">
                                    <option>الرجاء اختيار السماحية</option>

                                </select>

                            </div>


                            <div class="d-flex align-items-center  mt-4 mb-0  d-flex justify-content-center">

                                <button type="submit" class="btn btn-primary ">Register</button>
                            </div>

                            


                        </div>

                </div>
               

            </form>
        </div>
    </div>
</div>




@section Scripts {


    <script>



        function getroles() {

            $.get("/Account/listofrole", function (data) {
                console.log(data);
                var select = document.getElementById("role");
                select.innerHTML = "  <option>الرجاء اختيار السماحية</option>";
                // var option="";
                for (var i = 0; i < data.length; i++) {
                    // alert(data[i].subTypeArName);
                    var option = document.createElement("option");
                    option.text = data[i].name;
                    option.value = data[i].name;
                    select.appendChild(option);
                    //   document.getElementById('cat').innerHTML()

                }





            });


        }


        $(document).ready(function () {
            getroles();

        });
    </script>

    <partial name="_ValidationScriptsPartial" />

}
